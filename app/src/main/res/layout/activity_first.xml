<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.group17.mlbenchmarking.FirstActivity">


    <TextView
        android:id="@+id/textView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="Welcome to ML BenchMarking"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/textView02"
        tools:layout_editor_absoluteY="8dp"
        android:text="Please partition the dataset"
        android:textColor="@color/colorPrimary"
        tools:layout_editor_absoluteX="8dp"
        android:layout_below="@+id/textView01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView02"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/textView03"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/seekBar1"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/seekBar1"
        android:layout_weight="8"
        android:gravity="center"
        android:text="0%"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/textView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/seekBar1"
        android:layout_marginTop="12dp"
        android:text="Find Train and Test Instances" />

    <Button
        android:id="@+id/UploadDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView02"
        android:layout_below="@+id/button"
        android:layout_marginTop="28dp"
        android:background="@drawable/buttoncolors"
        android:text="Upload Database"
        android:textColor="@color/black" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textView03"
        android:layout_toEndOf="@+id/textView02"
        android:background="@drawable/buttoncolors"
        android:text="Find Split"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/LogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_toEndOf="@+id/seekBar1"
        android:background="@drawable/buttoncolors"
        android:text="Log File"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner1"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@+id/LogButton"
        android:background="@drawable/buttoncolors"
        android:text="Set Algorithm" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/UploadDatabase"
        android:layout_below="@+id/UploadDatabase"
        android:layout_marginTop="64dp"
        android:text="Please Select Algorithm"
        android:textColor="@color/colorPrimary" />

</RelativeLayout>